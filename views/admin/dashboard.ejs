<div class="mx-3 md:mx-6 lg:mx-12 mb-12">
  <div class="flex justify-between items-center my-6">
    <h2 class="text-2xl">Previous Posts</h2>
    <a href="/add-post" class="text-branding">+ Add New</a>
  </div>
  <ul>
    <% data.forEach(post => { %>
    <li class="flex justify-between items-center mb-2 border-b border-gray-300">
      <a href="/post/<%= post._id %>">
        <%= post.title %> <span class="text-branding"> &nearr;</span>
      </a>
      <div class="text-sm text-gray-600 flex justify-end items-center">
        <a href="/edit-post/<%= post._id %>" class="mr-3 hover:text-branding"
          >Edit</a
        >
        <form
          action="/delete-post/<%= post._id %>?_method-DELETE"
          method="POST"
        >
          <input
            type="submit"
            value="Delete"
            class="hover:text-branding hover:cursor-pointer"
          />
        </form>
      </div>
    </li>

    <% }) %>
  </ul>
</div>
