<div class="my-12 text-center">
  <h1 class="text-5xl mb-3 font-bold">Hi, This is Fari</h1>
  <p class="text-lg">Web developer and content creator</p>
</div>

<img
  src="/img/hero-img.jpg"
  alt="author writing on a notebook"
  class="w-1/2 h-48 md:h-72 rounded-lg object-cover mx-auto"
  width="981"
  height="528"
/>

<section class="px-12 my-12">
  <h2 class="text-branding text-2xl font-bold mb-6">Latest Posts</h2>
  <ul class="mb-12">
    <% data.forEach(post => { %>
    <li class="pl-3 border-l-4 border-gray-600">
      <div
        class="p-3 pb-1 mb-5 border-b border-gray-300 flex justify-between items-center"
      >
        <a href="/post/<%= post._id %>" class="hover:text-branding"
          ><%= post.title %>
        </a>
        <div class="text-gray-500"><%= post.CreatedAt.toDateString() %></div>
      </div>
    </li>

    <% }) %>
  </ul>

  <% if (nextPage !== null) {%>
  <a href="/?page=<%= nextPage %>" class="text-gray-600">
    &lt; View Older Posts</a
  >
  <% } %>
</section>
